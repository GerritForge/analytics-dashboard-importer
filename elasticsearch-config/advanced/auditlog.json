          }
        },
        "command_arguments": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "events_time_bucket": {
          "type": "date"
        },
        "num_events": {
          "type": "long"
        },
        "user_identifier": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "result": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
